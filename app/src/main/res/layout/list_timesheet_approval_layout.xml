<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkboxTimesheetApproval"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@null"
        android:buttonTint="@color/warnaBiru"
        android:padding="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/listTimesheetApprovalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textDateTimesheetApproval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="January 1, 2019"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textStatusTimesheetApproval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masuk"
            android:textColor="@color/warnaAbu"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>