<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/judulFormPRFStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="judul"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teksPRFStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Name*"
                android:text=""
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/requiredPRFStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Required"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            android:paddingLeft="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutBlack">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teksNotesPRFStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="5dp"
                android:hint="Notes"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnResetPRFStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_reset_off"
                android:textColor="@color/warnaTeksResetOff"
                android:text="Reset" />

            <Button
                android:id="@+id/btnSavePRFStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_simpan_off"
                android:textColor="@color/warnaTeksSimpanOff"
                android:text="Save"
                android:clickable="false"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deletePRFStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:backgroundTint="@color/warnaMerah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_cancel_white" />


</androidx.constraintlayout.widget.ConstraintLayout>