<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".ui.project.ProjectFormActivity">

    <TextView
        android:id="@+id/titleFormProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/title_form_text_size"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerClientNameProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputLocationProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text" />

    <EditText
        android:id="@+id/inputDepartmentProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:inputType="text" />

    <EditText
        android:id="@+id/inputUserNameProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User/PIC Name"
        android:inputType="text" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:hintEnabled="false" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonResetPositionLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_reset_off"
            android:clickable="false"
            android:text="@string/reset"
            android:textColor="@color/warnaTeksResetOff" />

        <Button
            android:id="@+id/buttonSavePositionLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_save"
            android:text="@string/save"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>