<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/slidingTabsProjectCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/warnaBiru"
            app:tabSelectedTextColor="@color/warnaBiru"
            app:tabTextColor="@color/warnaBiruUnselected"
            app:tabMode="fixed" />

        <com.xsis.android.batch217.utils.CustomViewPager
            android:id="@+id/viewPagerProjectCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#05C2B1AF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>