<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--SPINNER STYLE-->
    <style name="defaultViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinnerStyle" parent="defaultViewStyle">
        <item name="smsp_errorTextColor">@color/warnaMerah</item>
        <item name="smsp_floatingLabelColor">@color/warnaBiru</item>
        <item name="smsp_underlineColor">@color/warnaAbu</item>
        <item name="smsp_errorTextSize">13sp</item>
        <item name="smsp_itemSize">14sp</item>
        <item name="smsp_hintSize">14sp</item>
    </style>

    <style name="errorTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/warnaMerah</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
